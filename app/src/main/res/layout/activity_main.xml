<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="@drawable/gradient">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:id="@+id/shadow"
            android:textSize="64sp"
            android:textColor="#FFFFFF"
            android:shadowColor="#000000"
            android:shadowDx="1.5"
            android:shadowDy="1.3"
            android:shadowRadius="5.6"
            android:textAllCaps="true"
            tools:layout_editor_absoluteY="339dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="@string/login"
            android:layout_width="170dp"
            android:layout_height="36dp"
            android:id="@+id/button2"
            android:background="#F2994A"
            android:textColor="#FFFFFF"
            tools:layout_editor_absoluteY="587dp" tools:layout_editor_absoluteX="111dp"/>
    <Button
            android:text="@string/sign_up"
            android:layout_width="170dp"
            android:layout_height="36dp"
            android:id="@+id/button"
            android:background="#F2994A"
            android:textColor="#FFFCFC"
            tools:layout_editor_absoluteY="514dp" tools:layout_editor_absoluteX="111dp"/>
    <ImageView
            android:layout_width="69dp"
            android:layout_height="199dp" app:srcCompat="@drawable/fridge"
            android:id="@+id/imageView"
            android:contentDescription="TODO" tools:layout_editor_absoluteY="197dp"
            tools:layout_editor_absoluteX="162dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>

