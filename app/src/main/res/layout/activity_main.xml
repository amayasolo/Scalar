<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="@drawable/gradient">

    <ImageView
            android:layout_width="69dp"
            android:layout_height="210dp" app:srcCompat="@drawable/fridge"
            android:id="@+id/imageView"
            android:contentDescription="TODO"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="162dp" android:layout_marginStart="162dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="162dp"
            android:layout_marginRight="162dp"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="72dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:id="@+id/shadow"
            android:textSize="64sp"
            android:textColor="#FFFFFF"
            android:shadowColor="#000000"
            android:shadowDx="1.5"
            android:shadowDy="1.3"
            android:shadowRadius="5.6"
            android:textAllCaps="true"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="78dp" android:layout_marginStart="78dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="78dp" android:layout_marginRight="78dp" android:layout_marginBottom="46dp"
            app:layout_constraintBottom_toTopOf="@+id/button"
            app:layout_constraintTop_toBottomOf="@+id/imageView" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="0.714" android:layout_marginTop="32dp"/>
    <Button
            android:text="@string/sign_up"
            android:layout_width="170dp"
            android:layout_height="36dp"
            android:id="@+id/button"
            android:background="#F2994A"
            android:textColor="#FFFCFC"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="111dp" android:layout_marginStart="111dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="112dp"
            android:layout_marginRight="112dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/shadow"
            app:layout_constraintBottom_toTopOf="@+id/button2" android:layout_marginBottom="32dp"
            android:layout_marginTop="32dp"/>
    <Button
            android:text="@string/login"
            android:layout_width="170dp"
            android:layout_height="36dp"
            android:id="@+id/button2"
            android:background="#F2994A"
            android:textColor="#FFFFFF"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="111dp" android:layout_marginStart="111dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="112dp"
            android:layout_marginRight="112dp"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginBottom="201dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/button"/>

</androidx.constraintlayout.widget.ConstraintLayout>

