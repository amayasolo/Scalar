<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="#D0E7E6">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:id="@+id/shadow"
            android:textSize="40sp"
            android:textColor="#FFFFFF"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            android:layout_marginBottom="45dp" app:layout_constraintBottom_toTopOf="@+id/button"
            android:shadowColor="#000000"
            android:shadowDx="100"
            android:shadowDy="100"
            android:shadowRadius="100"
            android:textAllCaps="true" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintEnd_toEndOf="@+id/button"/>
    <Button
            android:text="@string/login"
            android:layout_width="170dp"
            android:layout_height="36dp"
            android:id="@+id/button2"
            android:background="#F2994A"
            android:textColor="#FFFFFF"
            app:layout_constraintTop_toBottomOf="@+id/button" android:layout_marginBottom="184dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
            android:text="@string/sign_up"
            android:layout_width="170dp"
            android:layout_height="36dp"
            android:id="@+id/button"
            android:background="#F2994A"
            android:textColor="#FFFCFC"
            app:layout_constraintTop_toBottomOf="@+id/imageView" android:layout_marginBottom="37dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/button2"
            app:layout_constraintStart_toStartOf="parent"/>
    <ImageView
            android:layout_width="69dp"
            android:layout_height="0dp" app:srcCompat="@drawable/fridge"
            android:id="@+id/imageView"
            android:layout_marginTop="197dp"
            android:layout_marginBottom="118dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/button" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:contentDescription="TODO"/>

</androidx.constraintlayout.widget.ConstraintLayout>