<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Inventory">
    <ListView
            android:layout_width="391dp"
            android:layout_height="694dp"
            android:id="@+id/inventoryList"
            android:dividerHeight="1dp" android:divider="#F2994A"
            style="@android:style/Widget.DeviceDefault.Light.ListView"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar" android:layout_marginTop="100dp"
            app:layout_constraintVertical_bias="0.448" app:layout_constraintStart_toStartOf="parent"
    >
    </ListView>
    <androidx.appcompat.widget.Toolbar
            android:layout_width="400dp"
            android:layout_height="100dp"
            android:background="#B5E3E1"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize" android:id="@+id/toolbar"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.571"
    />
    <TextView
            android:text="Inventory"
            android:layout_width="190dp"
            android:layout_height="56dp" android:id="@+id/Inventory"
            app:fontFamily="@font/roboto_thin" android:textAllCaps="true"
            android:textSize="35sp" android:textColorHighlight="#000000"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginRight="100dp" android:layout_marginEnd="100dp"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp" android:layout_marginTop="36dp"
            app:layout_constraintHorizontal_bias="0.569" android:textColor="#FFFFFF" android:shadowColor="#000000"
            android:shadowDx="1.5" android:shadowDy="1.5" android:shadowRadius="10"/>
    <ImageButton
            android:layout_width="35dp"
            android:layout_height="35dp" app:srcCompat="@android:drawable/ic_menu_sort_by_size"
            android:id="@+id/to_logout"
            android:background="#F2994A"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="44dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"/>
    <Button
            android:text="+"
            android:layout_width="35dp"
            android:layout_height="35dp" android:id="@+id/to_add_scale"
            android:textColor="#FFE2CA" android:textSize="20sp"
            android:textColorHighlight="#353030" android:background="#F2994A"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="44dp"
            app:layout_constraintStart_toEndOf="@+id/Inventory" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"/>
    <ImageButton
            android:layout_width="35dp"
            android:layout_height="35dp" app:srcCompat="@android:drawable/ic_menu_search"
            android:id="@+id/searchB"
            android:background="#F2994A"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="44dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="12dp"
            android:layout_marginEnd="12dp"/>
    <ImageButton
            android:layout_width="35dp"
            android:layout_height="35dp" app:srcCompat="@drawable/refresh" android:id="@+id/refresh"
            android:scaleType="centerInside"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toStartOf="@+id/searchB"
            android:layout_marginTop="44dp" android:background="#F2994A" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toEndOf="@+id/to_add_scale"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:paddingLeft="5dp"
            android:paddingTop="5dp" android:paddingRight="5dp" android:paddingBottom="5dp" android:padding="5dp"
            android:tint="#FFE2CA"/>

</androidx.constraintlayout.widget.ConstraintLayout>