<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Inventory">
    <ImageView
            android:layout_width="33dp"
            android:layout_height="114dp" app:srcCompat="@drawable/fridge" android:id="@+id/fridge1"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="28dp" android:layout_marginStart="28dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"/>
    <ListView
            android:layout_width="323dp"
            android:layout_height="708dp"
            android:id="@+id/inventoryList"
            android:dividerHeight="1dp" android:divider="@color/cardview_dark_background"
            style="@android:style/Widget.DeviceDefault.Light.ListView"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/fridge1"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/toolbar" android:layout_marginTop="200dp">
    </ListView>
    <androidx.appcompat.widget.Toolbar
            android:layout_width="400dp"
            android:layout_height="100dp"
            android:background="#B5E3E1"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize" android:id="@+id/toolbar"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.571"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/fridge1"/>
    <TextView
            android:text="Inventory"
            android:layout_width="190dp"
            android:layout_height="56dp" android:id="@+id/Inventory"
            app:fontFamily="@font/roboto_thin" android:textAllCaps="true"
            android:textSize="35sp" android:textColorHighlight="#FFFFFF"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginRight="100dp" android:layout_marginEnd="100dp"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp" android:layout_marginTop="36dp"
            app:layout_constraintHorizontal_bias="0.569"/>
    <ImageButton
            android:layout_width="35dp"
            android:layout_height="35dp" app:srcCompat="@android:drawable/ic_menu_sort_by_size"
            android:id="@+id/to_logout"
            android:background="#F2994A"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="44dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"/>
    <ImageButton
            android:layout_width="35dp"
            android:layout_height="35dp" app:srcCompat="@android:drawable/ic_menu_share"
            android:id="@+id/connectB"
            android:background="#F2994A"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="44dp"
            app:layout_constraintEnd_toStartOf="@+id/searchB" android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"/>
    <Button
            android:text="+"
            android:layout_width="35dp"
            android:layout_height="35dp" android:id="@+id/to_add_scale"
            android:textColor="#F6F6F6" android:textSize="20sp"
            android:textColorHighlight="#353030" android:background="#F2994A"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="44dp" app:layout_constraintEnd_toStartOf="@+id/connectB"
            android:layout_marginRight="4dp" android:layout_marginEnd="4dp"/>
    <ImageButton
            android:layout_width="35dp"
            android:layout_height="35dp" app:srcCompat="@android:drawable/ic_menu_search"
            android:id="@+id/searchB"
            android:background="#F2994A"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="44dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="12dp"
            android:layout_marginEnd="12dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>