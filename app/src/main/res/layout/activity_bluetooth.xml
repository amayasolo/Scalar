<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Bluetooth">

    <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="101dp"
            android:background="#B5E3E1"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize" android:id="@+id/toolbar4"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.571"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/fridge1"/>
    <TextView
            android:text="PAIR DEVICE"
            android:layout_width="wrap_content"
            android:layout_height="56dp" android:id="@+id/inventory"
            android:textAllCaps="true"
            android:textSize="35sp" android:textColorHighlight="#000000"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/toolbar4"
            app:layout_constraintStart_toStartOf="@+id/toolbar4"
            android:layout_marginTop="28dp"
            app:layout_constraintHorizontal_bias="0.564" android:textColor="#FFFFFF" android:shadowColor="#000000"
            android:shadowDx="1.5" android:shadowDy="1.5" android:shadowRadius="10"
            app:layout_constraintBottom_toBottomOf="@+id/toolbar4"/>
    <Button
            android:text="Weight Sensor A"
            android:layout_width="385dp"
            android:layout_height="51dp" android:id="@+id/weight_sensor_a"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar4"
            app:layout_constraintHorizontal_bias="0.615"
            app:layout_constraintVertical_bias="0.031" app:layout_constraintBottom_toBottomOf="parent"
            android:background="#F2994A"/>
    <Button
            android:text="Weight Sensor B"
            android:layout_width="385dp"
            android:layout_height="51dp" android:id="@+id/weight_sensor_b"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toBottomOf="@+id/toolbar4"
            app:layout_constraintHorizontal_bias="0.615" app:layout_constraintVertical_bias="0.146"
            android:background="#F2994A"/>

</androidx.constraintlayout.widget.ConstraintLayout>