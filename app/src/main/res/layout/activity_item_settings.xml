<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ItemSettings">

    <EditText
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/item_remain"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="47dp"
            android:layout_marginStart="47dp" android:layout_marginEnd="46dp" android:layout_marginRight="46dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item_sensor_id" android:layout_marginTop="45dp"
    />
    <TextView
            android:text="REMAINING"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/remainingLabel"
            app:fontFamily="@font/roboto_thin" android:textSize="14sp"
            android:textColor="#201F1F"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="47dp"
            android:layout_marginStart="47dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintBottom_toTopOf="@+id/item_remain"/>
    <EditText
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/item_sensor_id"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="47dp"
            android:layout_marginStart="47dp" android:layout_marginEnd="46dp" android:layout_marginRight="46dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item_name" android:layout_marginTop="45dp"
            app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:text="SENSOR ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView6"
            app:fontFamily="@font/roboto_thin" android:textSize="14sp"
            android:textColor="#201F1F"
            android:layout_marginEnd="278dp"
            android:layout_marginRight="278dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="47dp"
            android:layout_marginStart="47dp"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintBottom_toTopOf="@+id/item_sensor_id"/>
    <androidx.appcompat.widget.Toolbar
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:background="#F2994A"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize" android:id="@+id/toolbar2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="557dp"
            app:layout_constraintVertical_bias="0.0"/>
    <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp" app:srcCompat="@drawable/back"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp" android:id="@+id/item_to_inv"
            android:scaleType="fitCenter" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" android:background="#F2994A"/>
    <TextView
            android:text="ITEM SETTINGS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/itemSettings"
            app:fontFamily="@font/roboto_thin" android:textSize="30sp"
            android:textColor="#000000" android:textColorHighlight="#94EFBA"
            app:layout_constraintBottom_toBottomOf="@+id/toolbar2" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="140dp" android:layout_marginBottom="8dp"
            app:layout_constraintHorizontal_bias="0.497" app:layout_constraintVertical_bias="1.0"
            android:shadowRadius="10" android:shadowColor="#000000" android:shadowDx="1.5" android:shadowDy="1.5"/>
    <TextView
            android:text="NAME"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/nameLabel"
            app:fontFamily="@font/roboto_thin" android:textSize="14sp"
            android:textColor="#201F1F" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="44dp"
            android:layout_marginStart="44dp" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/toolbar2"
            app:layout_constraintBottom_toTopOf="@+id/item_name"/>
    <Button
            android:text="RESET WEIGHT SENSOR"
            android:layout_width="180dp"
            android:layout_height="60dp" android:id="@+id/reset_weight_sensor"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="107dp"
            android:layout_marginStart="107dp"
            android:layout_marginEnd="107dp"
            android:layout_marginRight="107dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0" android:background="#B5E3E1" android:shadowColor="#000000"
            android:shadowRadius="0" android:textStyle="bold" android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="128dp"
            app:layout_constraintTop_toBottomOf="@+id/item_remain" android:layout_marginTop="60dp"/>
    <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp" app:srcCompat="@drawable/fastfood"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/imageView8" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.486"
            app:layout_constraintBottom_toTopOf="@+id/itemSettings" android:layout_marginTop="30dp"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@android:drawable/ic_menu_delete"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="44dp"
            android:id="@+id/delete_item" android:background="#000000" app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintTop_toBottomOf="@+id/reset_weight_sensor" android:layout_marginTop="50dp"/>
    <EditText
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/item_name"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="47dp"
            android:layout_marginStart="47dp" android:layout_marginEnd="46dp" android:layout_marginRight="46dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/toolbar2"
            android:layout_marginTop="45dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>