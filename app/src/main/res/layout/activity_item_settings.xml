<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ItemSettings">

    <com.google.android.material.textfield.TextInputEditText
            android:layout_width="344dp"
            android:layout_height="36dp"
            android:hint="Date Entered"
            android:id="@+id/date" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.492"
            app:layout_constraintTop_toBottomOf="@+id/sensor_id_settings"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.118"/>
    <com.google.android.material.textfield.TextInputEditText
            android:layout_width="344dp"
            android:layout_height="36dp"
            android:hint="Sensor ID"
            android:id="@+id/sensor_id_settings" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.492"
            app:layout_constraintTop_toBottomOf="@+id/remaining"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.118"/>
    <com.google.android.material.textfield.TextInputEditText
            android:layout_width="344dp"
            android:layout_height="36dp"
            android:hint="Remaining %"
            android:id="@+id/remaining" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.492"
            app:layout_constraintTop_toBottomOf="@+id/name_of_item"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.118"/>
    <com.google.android.material.textfield.TextInputEditText
            android:layout_width="344dp"
            android:layout_height="36dp"
            android:hint="Item Name"
            android:id="@+id/name_of_item" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.492"
            app:layout_constraintTop_toBottomOf="@+id/imageView8"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.118"
    />
    <ImageView
            android:layout_width="407dp"
            android:layout_height="199dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/imageView8" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="557dp" app:layout_constraintVertical_bias="0.25" android:background="#F2994A"/>
    <TextView
            android:text="ITEM SETTINGS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/textView3" android:textSize="36sp" app:fontFamily="@font/roboto_thin"
            android:textColor="#0F0404"
            android:shadowColor="#000000"
            android:shadowDx="1.5"
            android:shadowDy="1.5"
            android:shadowRadius="10"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/first_name"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="144dp"
            app:layout_constraintVertical_bias="0.0" app:layout_constraintHorizontal_bias="0.496"/>
    <Button
            android:text="RESET WEIGHT SENSOR"
            android:layout_width="107dp"
            android:layout_height="60dp"
            android:id="@+id/reset"
            app:layout_constraintTop_toBottomOf="@+id/date" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="32dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0" android:background="#94EFBA"
            app:layout_constraintHorizontal_bias="0.506"/>
    <Button
            android:text="SAVE CHANGES"
            android:layout_width="108dp"
            android:layout_height="47dp"
            android:id="@+id/save_changes"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toBottomOf="@+id/reset"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:background="#94EFBA" app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintVertical_bias="0.341"/>
    <ImageView
            android:layout_width="140dp"
            android:layout_height="137dp" app:srcCompat="@drawable/foodie"
            android:id="@+id/imageView11" app:layout_constraintEnd_toEndOf="@+id/imageView8"
            app:layout_constraintStart_toStartOf="@+id/imageView8" app:layout_constraintTop_toTopOf="@+id/imageView8"
            app:layout_constraintBottom_toTopOf="@+id/textView3"/>
</androidx.constraintlayout.widget.ConstraintLayout>