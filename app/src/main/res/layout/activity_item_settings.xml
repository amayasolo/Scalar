<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ItemSettings">

    <Button
            android:text="SAVE CHANGES"
            android:layout_width="0dp"
            android:layout_height="48dp" android:id="@+id/button2"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="37dp" android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/button" android:layout_marginEnd="136dp"
            android:layout_marginRight="136dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="129dp"
            android:layout_marginStart="129dp"/>
    <TextView
            android:text="SENSOR ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView6"
            app:fontFamily="@font/roboto_thin" android:textSize="14sp"
            android:textColor="#201F1F" android:layout_marginTop="9dp"
            app:layout_constraintTop_toBottomOf="@+id/remainingBox" android:layout_marginEnd="278dp"
            android:layout_marginRight="278dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="47dp"
            android:layout_marginStart="47dp"/>
    <com.google.android.material.textfield.TextInputEditText
            android:layout_width="302dp"
            android:layout_height="62dp"
            android:id="@+id/editText2" app:layout_constraintTop_toBottomOf="@+id/textView7"
            android:layout_marginEnd="44dp" android:layout_marginRight="44dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="47dp" android:layout_marginStart="47dp"/>
    <com.google.android.material.textfield.TextInputEditText
            android:layout_width="302dp"
            android:layout_height="62dp"
            android:id="@+id/editText" app:layout_constraintTop_toBottomOf="@+id/textView6"
            android:layout_marginEnd="44dp" android:layout_marginRight="44dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="47dp" android:layout_marginStart="47dp"/>
    <androidx.appcompat.widget.Toolbar
            android:layout_width="399dp"
            android:layout_height="255dp"
            android:background="#F2994A"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize" android:id="@+id/toolbar2"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toTopOf="@+id/nameLabel" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="ITEM SETTINGS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/itemSettings"
            app:fontFamily="@font/roboto_thin" android:textSize="35sp"
            android:textColor="#FFFFFF" android:textColorHighlight="#201E1E"
            app:layout_constraintBottom_toTopOf="@+id/toolbar2" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="450dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="400dp"
            android:layout_marginStart="400dp" app:layout_constraintEnd_toStartOf="@+id/toolbar2"
    />
    <ImageButton
            android:layout_height="35dp" app:srcCompat="?attr/actionModeCloseDrawable"
            android:id="@+id/backButton"
            android:background="#F2994A"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="40dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="15dp" android:layout_marginStart="15dp" android:layout_width="35dp"/>
    <com.google.android.material.textfield.TextInputEditText
            android:layout_width="302dp"
            android:layout_height="62dp"
            android:id="@+id/remainingBox" app:layout_constraintTop_toBottomOf="@+id/remainingLabel"
            android:layout_marginEnd="44dp" android:layout_marginRight="44dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="47dp" android:layout_marginStart="47dp"/>
    <com.google.android.material.textfield.TextInputEditText
            android:layout_width="302dp"
            android:layout_height="62dp"
            android:id="@+id/nameBox" app:layout_constraintTop_toBottomOf="@+id/nameLabel"
            android:layout_marginBottom="2dp" app:layout_constraintBottom_toTopOf="@+id/remainingLabel"
            android:layout_marginEnd="46dp" android:layout_marginRight="46dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="47dp" android:layout_marginStart="47dp"/>
    <TextView
            android:text="NAME"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/nameLabel"
            app:fontFamily="@font/roboto_thin" android:textSize="14sp"
            android:textColor="#201F1F" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="47dp"
            android:layout_marginStart="47dp" android:layout_marginTop="38dp"
            app:layout_constraintTop_toBottomOf="@+id/toolbar2"/>
    <TextView
            android:text="DATE LAST UPDATED"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView7"
            app:fontFamily="@font/roboto_thin" android:textSize="14sp"
            android:textColor="#201F1F" android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@+id/editText" android:layout_marginEnd="213dp"
            android:layout_marginRight="213dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="47dp"
            android:layout_marginStart="47dp" android:layout_marginBottom="1dp"
            app:layout_constraintBottom_toTopOf="@+id/editText2"/>
    <TextView
            android:text="REMAINING"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/remainingLabel"
            app:fontFamily="@font/roboto_thin" android:textSize="14sp"
            android:textColor="#201F1F" app:layout_constraintBottom_toTopOf="@+id/remainingBox"
            android:layout_marginTop="2dp" app:layout_constraintTop_toBottomOf="@+id/nameBox"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="47dp"
            android:layout_marginStart="47dp" android:layout_marginEnd="271dp" android:layout_marginRight="271dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="RESET WEIGHT SENSOR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="107dp"
            android:layout_marginStart="107dp" android:layout_marginTop="22dp"
            app:layout_constraintTop_toBottomOf="@+id/editText2" android:layout_marginEnd="107dp"
            android:layout_marginRight="107dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="15dp" app:layout_constraintBottom_toTopOf="@+id/button2"/>
</androidx.constraintlayout.widget.ConstraintLayout>