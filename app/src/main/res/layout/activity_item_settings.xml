<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ItemSettings">

    <TextView
            android:text="SENSOR ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView6"
            app:fontFamily="@font/roboto_thin" android:textSize="14sp"
            android:textColor="#201F1F" android:layout_marginTop="9dp"
            app:layout_constraintTop_toBottomOf="@+id/remainingBox" android:layout_marginEnd="278dp"
            android:layout_marginRight="278dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="47dp"
            android:layout_marginStart="47dp"/>
    <com.google.android.material.textfield.TextInputEditText
            android:layout_width="302dp"
            android:layout_height="62dp"
            android:id="@+id/editText2" app:layout_constraintTop_toBottomOf="@+id/textView7"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"/>
    <com.google.android.material.textfield.TextInputEditText
            android:layout_width="302dp"
            android:layout_height="62dp"
            android:id="@+id/editText" app:layout_constraintTop_toBottomOf="@+id/textView6"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"/>
    <androidx.appcompat.widget.Toolbar
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:background="#F2994A"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize" android:id="@+id/toolbar2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="557dp"
            app:layout_constraintVertical_bias="0.0"/>
    <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp" app:srcCompat="@drawable/back"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp" android:id="@+id/item_to_inv"
            android:scaleType="fitCenter" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" android:background="#F2994A"/>
    <TextView
            android:text="ITEM SETTINGS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/itemSettings"
            app:fontFamily="@font/roboto_thin" android:textSize="30dp"
            android:textColor="#000000" android:textColorHighlight="#94EFBA"
            app:layout_constraintBottom_toBottomOf="@+id/toolbar2" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="140dp" android:layout_marginBottom="8dp"
            app:layout_constraintHorizontal_bias="0.497" app:layout_constraintVertical_bias="1.0"/>
    <com.google.android.material.textfield.TextInputEditText
            android:layout_width="302dp"
            android:layout_height="62dp"
            android:id="@+id/remainingBox"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/remainingLabel" android:layout_marginTop="16dp"/>
    <com.google.android.material.textfield.TextInputEditText
            android:layout_width="302dp"
            android:layout_height="62dp"
            android:id="@+id/nameBox"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/toolbar2"
            android:layout_marginTop="50dp"/>
    <TextView
            android:text="NAME"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/nameLabel"
            app:fontFamily="@font/roboto_thin" android:textSize="14sp"
            android:textColor="#201F1F" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="47dp"
            android:layout_marginStart="47dp" android:layout_marginTop="38dp"
            app:layout_constraintTop_toBottomOf="@+id/toolbar2"/>
    <TextView
            android:text="DATE LAST UPDATED"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView7"
            app:fontFamily="@font/roboto_thin" android:textSize="14sp"
            android:textColor="#201F1F" android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@+id/editText" android:layout_marginEnd="213dp"
            android:layout_marginRight="213dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="47dp"
            android:layout_marginStart="47dp" android:layout_marginBottom="1dp"
            app:layout_constraintBottom_toTopOf="@+id/editText2"/>
    <TextView
            android:text="REMAINING"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/remainingLabel"
            app:fontFamily="@font/roboto_thin" android:textSize="14sp"
            android:textColor="#201F1F" app:layout_constraintBottom_toTopOf="@+id/remainingBox"
            android:layout_marginTop="2dp" app:layout_constraintTop_toBottomOf="@+id/nameBox"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="47dp"
            android:layout_marginStart="47dp" android:layout_marginEnd="271dp" android:layout_marginRight="271dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="RESET WEIGHT SENSOR"
            android:layout_width="180dp"
            android:layout_height="60dp" android:id="@+id/button"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="107dp"
            android:layout_marginStart="107dp" android:layout_marginTop="56dp"
            app:layout_constraintTop_toBottomOf="@+id/editText2" android:layout_marginEnd="107dp"
            android:layout_marginRight="107dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0" android:background="#B5E3E1" android:shadowColor="#000000"
            android:shadowRadius="10" android:textStyle="bold" android:textSize="14sp"/>
    <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp" app:srcCompat="@drawable/fastfood"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/imageView8" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.486"
            app:layout_constraintBottom_toTopOf="@+id/itemSettings"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@android:drawable/ic_menu_delete"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="16dp"
            android:id="@+id/imageButton2" android:background="#000000" app:layout_constraintHorizontal_bias="0.498"/>
</androidx.constraintlayout.widget.ConstraintLayout>